<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Rule</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.description %></td>
        <td><%= activity.rule_to_string %></td>
        <td><%= activity.start_time %></td>
        <td><%= activity.end_time %></td>
        <td><%= link_to 'Edit', edit_admin_museum_recurring_activity_path(@museum, activity) %></td>
        <td><%= link_to 'Destroy', admin_museum_recurring_activity_path(@museum, activity), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>