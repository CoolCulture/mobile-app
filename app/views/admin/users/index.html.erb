<% if @warnings.present? %>
<div class="alert alert-warning fade in">
  <% @warnings.each do |warning|  %>
  <%= warning %><br>
  <% end %>
</div>
<% end %>

<%= render partial: 'admin/shared/nav' %>

<h1>Listing Users</h1>

<%= render partial: 'admin/shared/search', 
           locals: { path: admin_users_path,
                     placeholder_text: 'Search by email' } %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Pass ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Admin?</th>
        <th>Family Card Account</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <% family_card = user.family_card %>
        <tr>
          <td><%= family_card ? family_card.pass_id : "N/A" %></td>
          <td><%= family_card ? family_card.first_name : "N/A" %></td>
          <td><%= family_card ? family_card.last_name : "N/A" %></td>
          <td><%= user.email %></td>
          <td><%= user.admin? %></td>
          <td><%= family_card ? link_to("Family Card Account", admin_family_card_path(family_card)) : "N/A" %></td>
          <td><%= link_to 'Reset Password', reset_password_admin_user_path(user), method: :post %></td>
          <td><%= link_to 'Show', admin_user_path(user) %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
          <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @users.page(params[:page]) %>

<br>

<h2>Import Users</h2>

<%= form_tag import_admin_users_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import Users" %>
<% end %>
