<p id="notice"><%= notice %></p>

<% if @user.family_card %>
  <p>
    <strong>Pass ID:</strong>
    <%= @user.family_card.pass_id %>
  </p>

  <p>
    <strong>First Name:</strong>
    <%= @user.family_card.first_name %>
  </p>

  <p>
    <strong>Last Name:</strong>
    <%= @user.family_card.last_name %>
  </p>
<% end %>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Family Card Account:</strong>
  <%= @user.family_card ? link_to("Family Card Account", admin_family_card_path(@user.family_card)) : "N/A" %>
</p>

<%= link_to 'Edit', edit_admin_user_path(@user) %> |
<%= link_to 'Back', admin_users_path %>
